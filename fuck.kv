
<MyLayout>
    red:red
    green:green
    blue:blue

    BoxLayout:
        
        orientation: "vertical"
        size: root.width, root.height

        padding:50
        spacing:20

        Label:
            text: ''
            id: my_label
            background_color: (0/255,0/255,0/225, 1)
            canvas.before:
	            Color:
		            rgba: self.background_color
	            Rectangle:
		            size: self.size
		            pos: self.pos
        Label:
            size_hint: (0.1, 0.1)
            text: 'slide'
            id: my_color
            pos_hint: {'x':0.01}
        
        GridLayout:
            cols:3
            rols:2

            Label:
                text: 'r'
                font_size: 25

            Label:
                text: 'g'
                font_size: 25
 
            Label:
                text: 'b'
                font_size: 25
            
            
            Slider:
                id: red
                min:0
                max:255
                step:1
                orientation: 'horizontal'
                on_value: root.slide_it('red', *args)

            Slider:
                id: green
                min:0
                max:255
                step:1
                orientation: 'horizontal'
                on_value: root.slide_it('green', *args)
            
            Slider:
                id: blue
                min:0
                max:255
                step:1
                orientation: 'horizontal'
                on_value: root.slide_it('blue', *args)
